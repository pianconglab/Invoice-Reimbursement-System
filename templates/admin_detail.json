{
    "title": "申请详情",
    "layout": "2-column",
    "components": [
        {
            "type": "header",
            "title": "申请详情",
            "right_button": {
                "text": "返回列表",
                "icon": "arrow-left",
                "action": "navigate_back"
            }
        },
        {
            "type": "container",
            "span": 8,
            "components": [
                {
                    "type": "card",
                    "title": "申请信息",
                    "components": [
                        {
                            "type": "display-item",
                            "label": "申请编号",
                            "prop": "application_id",
                            "format": "code"
                        },
                        {
                            "type": "display-item",
                            "label": "购买人",
                            "prop": "buyer"
                        },
                        {
                            "type": "display-item",
                            "label": "物品名称",
                            "prop": "item_name"
                        },
                        {
                            "type": "display-item",
                            "label": "使用途径",
                            "prop": "usage_type",
                            "format": "badge",
                            "style_map": {
                                "个人使用": "info",
                                "其他": "success"
                            }
                        },
                        {
                            "type": "display-item",
                            "label": "物品类型",
                            "prop": "item_category"
                        },
                        {
                            "type": "display-item",
                            "label": "数量",
                            "prop": "quantity"
                        },
                        {
                            "type": "display-item",
                            "label": "购买时间",
                            "prop": "purchase_date"
                        },
                        {
                            "type": "display-item",
                            "label": "开票日期",
                            "prop": "invoice_date"
                        },
                        {
                            "type": "display-item",
                            "label": "发票号码",
                            "prop": "invoice_number",
                            "format": "code"
                        },
                        {
                            "type": "display-item",
                            "label": "发票金额",
                            "prop": "invoice_amount",
                            "format": "currency"
                        },
                        {
                            "type": "display-item",
                            "label": "商品链接",
                            "prop": "product_link",
                            "format": "link",
                            "placeholder": "未提供"
                        },
                        {
                            "type": "display-item",
                            "label": "提交时间",
                            "prop": "submit_time"
                        },
                        {
                            "type": "display-item",
                            "label": "更新时间",
                            "prop": "update_time"
                        },
                        {
                            "type": "display-block",
                            "label": "商品参数及用途说明",
                            "prop": "product_description",
                            "format": "html"
                        }
                    ]
                },
                {
                    "type": "card",
                    "title": "附件列表",
                    "condition": "attachments.length > 0",
                    "components": [
                        {
                            "type": "attachment-list",
                            "prop": "attachments"
                        }
                    ]
                }
            ]
        },
        {
            "type": "container",
            "span": 4,
            "components": [
                {
                    "type": "card",
                    "title": "当前状态",
                    "components": [
                        {
                            "type": "status-display",
                            "prop": "status",
                            "icon_map": {
                                "待审批": "clock",
                                "报销中": "hourglass-split",
                                "已报销": "check-circle",
                                "驳回": "x-circle"
                            },
                            "style_map": {
                                "待审批": "warning",
                                "报销中": "primary",
                                "已报销": "success",
                                "驳回": "danger"
                            }
                        }
                    ]
                },
                {
                    "type": "card",
                    "title": "审批操作",
                    "components": [
                        {
                            "type": "form",
                            "action": "approve_application",
                            "model": "approvalForm",
                            "items": [
                                {
                                    "type": "select",
                                    "label": "审批状态",
                                    "prop": "status",
                                    "required": true,
                                    "options": [
                                        "待审批",
                                        "报销中",
                                        "已报销",
                                        "驳回"
                                    ]
                                },
                                {
                                    "type": "textarea",
                                    "label": "审批意见",
                                    "prop": "comment"
                                }
                            ],
                            "submit": {
                                "text": "提交审批",
                                "icon": "check-lg"
                            }
                        },
                        {
                            "type": "display-block",
                            "label": "历史审批意见",
                            "prop": "comment_history",
                            "condition": "comment_history exists",
                            "format": "html"
                        }
                    ]
                }
            ]
        }
    ]
}