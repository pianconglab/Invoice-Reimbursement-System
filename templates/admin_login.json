{
    "page": {
        "title": "管理员登录 - 骈聪课题组发票报销系统",
        "layout": "centered-container",
        "components": [
            {
                "type": "row",
                "justify": "center",
                "children": [
                    {
                        "type": "col",
                        "xs": 24,
                        "sm": 12,
                        "md": 8,
                        "lg": 8,
                        "xl": 6,
                        "children": [
                            {
                                "type": "card",
                                "header": {
                                    "type": "title",
                                    "level": 4,
                                    "content": "管理员登录",
                                    "icon": "bi-shield-lock",
                                    "style": {
                                        "text-align": "center",
                                        "margin-bottom": 0
                                    }
                                },
                                "children": [
                                    {
                                        "type": "form",
                                        "prop": "loginForm",
                                        "rules_prop": "loginRules",
                                        "children": [
                                            {
                                                "type": "form-item",
                                                "label": "用户名",
                                                "prop": "username",
                                                "children": [
                                                    {
                                                        "type": "input",
                                                        "prop": "username",
                                                        "placeholder": "请输入用户名",
                                                        "required": true
                                                    }
                                                ]
                                            },
                                            {
                                                "type": "form-item",
                                                "label": "密码",
                                                "prop": "password",
                                                "children": [
                                                    {
                                                        "type": "input",
                                                        "input_type": "password",
                                                        "prop": "password",
                                                        "placeholder": "请输入密码",
                                                        "required": true,
                                                        "show_password": true
                                                    }
                                                ]
                                            },
                                            {
                                                "type": "form-item",
                                                "children": [
                                                    {
                                                        "type": "button",
                                                        "label": "登录",
                                                        "button_type": "primary",
                                                        "native_type": "submit",
                                                        "icon": "bi-box-arrow-in-right",
                                                        "style": {
                                                            "width": "100%"
                                                        },
                                                        "event": "submit"
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "type": "text",
                                        "content": "默认账户：admin",
                                        "style": {
                                            "text-align": "center",
                                            "margin-top": "1rem",
                                            "font-size": "0.875em",
                                            "color": "#6c757d"
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}