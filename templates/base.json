{
    "page": {
        "title": "骈聪课题组发票报销系统",
        "layout": "default",
        "components": [
            {
                "type": "layout",
                "name": "main-layout",
                "children": [
                    {
                        "type": "header",
                        "style": {
                            "padding": 0
                        },
                        "children": [
                            {
                                "type": "menu",
                                "mode": "horizontal",
                                "background_color": "#0d6efd",
                                "text_color": "#ffffff",
                                "active_text_color": "#ffffff",
                                "router": true,
                                "children": [
                                    {
                                        "type": "menu-item",
                                        "index": "/",
                                        "route": "/",
                                        "content": "骈聪课题组发票报销系统",
                                        "style": {
                                            "font-size": "1.25rem",
                                            "font-weight": "bold"
                                        }
                                    },
                                    {
                                        "type": "div",
                                        "style": {
                                            "flex-grow": 1
                                        }
                                    },
                                    {
                                        "type": "menu-item",
                                        "index": "/query-status",
                                        "route": "/query-status",
                                        "content": "查询状态"
                                    },
                                    {
                                        "type": "menu-item",
                                        "index": "/edit-application",
                                        "route": "/edit-application",
                                        "content": "修改申请"
                                    },
                                    {
                                        "type": "menu-item",
                                        "index": "/admin/dashboard",
                                        "route": "/admin/dashboard",
                                        "content": "管理后台",
                                        "condition": "session.admin_logged_in"
                                    },
                                    {
                                        "type": "menu-item",
                                        "index": "/admin/logout",
                                        "route": "/admin/logout",
                                        "content": "退出",
                                        "condition": "session.admin_logged_in"
                                    },
                                    {
                                        "type": "menu-item",
                                        "index": "/admin/login",
                                        "route": "/admin/login",
                                        "content": "管理员登录",
                                        "condition": "!session.admin_logged_in"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "main",
                        "style": {
                            "padding": "2rem"
                        },
                        "children": [
                            {
                                "type": "message-area",
                                "description": "用于显示从后端返回的瞬时消息（Flashed Messages）",
                                "component_reference": "el-message or el-notification"
                            },
                            {
                                "type": "router-view",
                                "description": "此处为子页面（如登录页、管理后台等）的渲染区域，对应 Jinja2 的 {% block content %}。"
                            }
                        ]
                    }
                ]
            }
        ],
        "external_resources": [
            {
                "type": "css",
                "url": "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            },
            {
                "type": "css",
                "url": "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
            },
            {
                "type": "js",
                "url": "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            }
        ]
    }
}